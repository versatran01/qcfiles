[user]
	  name = chao
    email = versatran01@gmail.com
[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
    autocrlf = false
[color]
    ui = true
[alias]
    co = checkout
    br = branch
    bra = branch -a
    cm = commit
    st = status
    df = diff
    pl = pull
    ps = push
    sh = stash
    sbpull = subtree pull --squash --prefix
    sbpush = subtree push --prefix
    last = log -1 HEAD
    vis = !gitg &
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold magenta)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(bold magenta)- %an%C(reset)' --all
    lg = !"git lg1"
[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto
[color "branch"]
    current = green bold
    local = yellow bold
    remote = red bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green
    whitespace = white reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[diff]
    tool = vimdiff
[credential]
    helper = cache --timeout=3600
[push]
    default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

{
  "segments": [
    "username",
    "hostname",
    "virtual_env",
    {
      "type": "env",
      "var": "CUDA_VISIBLE_DEVICES",
      "fg_color": 15,
      "bg_color": 93
    },
    "ssh",
    "cwd",
    "git",
    "jobs",
    "root"
  ],
  "mode": "flat",
  "cwd": {
    "max_depth": 4
  },
  "hostname": {
    "colorize": true
  },
  "vcs": {
    "show_symbol": false
  }
}

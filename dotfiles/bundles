if &compatible
    set nocompatible
endif

set runtimepath+=~/.vim/bundle/repos/github.com/Shougo/dein.vim

" Required:
call dein#begin(expand('~/.cache/dein'))
call dein#add('Shougo/dein.vim')

" My Bundles here:
" All python stuff
call dein#add('tmhedberg/SimpylFold')
call dein#add('vim-scripts/indentpython.vim')
"call dein#add('scrooloose/syntastic')
call dein#add('davidhalter/jedi-vim')

call dein#add('tpope/vim-fugitive')

call dein#add('wlangstroth/vim-racket')
call dein#add('Shougo/neocomplete.vim')

call dein#add('klen/python-mode')
" Python-mode
" Activate rope
" Keys:
" K             Show python docs
" <Ctrl-Space>  Rope autocomplete
" <Ctrl-c>g     Rope goto definition
" <Ctrl-c>d     Rope show documentation
" <Ctrl-c>f     Rope find occurrences
" <Leader>b     Set, unset breakpoint (g:pymode_breakpoint enabled)
" [[            Jump on previous class or function (normal, visual, operator modes)
" ]]            Jump on next class or function (normal, visual, operator modes)
" [M            Jump on previous class or method (normal, visual, operator modes)
" ]M            Jump on next class or method (normal, visual, operator modes)
let g:pymode_rope = 1

" Documentation
let g:pymode_doc = 1
let g:pymode_doc_key = 'K'

"Linting
let g:pymode_lint = 1
let g:pymode_lint_checker = "pyflakes,pep8"
" Auto check on save
let g:pymode_lint_write = 1

" Support virtualenv
let g:pymode_virtualenv = 1

" Enable breakpoints plugin
let g:pymode_breakpoint = 1
let g:pymode_breakpoint_key = '<leader>b'

" syntax highlighting
let g:pymode_syntax = 1
let g:pymode_syntax_all = 1
let g:pymode_syntax_indent_errors = g:pymode_syntax_all
let g:pymode_syntax_space_errors = g:pymode_syntax_all

" Don't autofold code
let g:pymode_folding = 0

call dein#add('edkolev/promptline.vim')
"let g:promptline_theme = 'airline'
let g:promptline_symbols={
            \ 'left'       : '',
            \ 'left_alt'   : '',
            \ 'dir_sep'    : '/',
            \ 'truncation' : '...',
            \ 'vcs_branch' : '',
            \ 'space'      : ' '}

call dein#add('edkolev/tmuxline.vim')
let g:tmuxline_separators={
            \ 'left' : '',
            \ 'left_alt': '',
            \ 'right' : '',
            \ 'right_alt' : '',
            \ 'space' : ' '}
let g:tmuxline_preset={
            \'a'    : '#H',
            \'b'    : '#(whoami)',
            \'c'    : '#(host `hostname` | cut -d " " -f 4)',
            \'win'  : ['#I', '#W'],
            \'cwin' : ['#I', '#W'],
            \'x'    : '#W',
            \'y'    : '#(date)',
            \'z'    : '#S'}

call dein#add('luochen1990/rainbow')
let g:rainbow_active = 1

call dein#add('rhysd/vim-clang-format')
autocmd FileType c,cc,cpp,h,hpp nnoremap <buffer><Leader>cf :<C-u>ClangFormat<CR>
autocmd FileType c,cc,cpp,h,hpp vnoremap <buffer><Leader>cf :ClangFormat<CR>

call dein#add('scrooloose/nerdtree')
nmap <leader>d :NERDTree<CR>
nmap <leader>dt :NERDTreeToggle<CR>
nmap <leader>df :NERDTreeFind<CR>

call dein#add('kien/ctrlp.vim')
let g:ctrlp_map='<C-T>'
let g:ctrlp_cmd='CtrlP'
let g:ctrlp_custom_ignore={
            \ 'dir':  '\v[\/]\.(git|hg|svn)$',
            \ 'file': '\v\.(exe|so|dll)$',
            \ }

call dein#add('majutsushi/tagbar')
nmap <leader>b :Tagbar<CR>
nmap <leader>bt :TagbarToggle<CR>

call dein#add('Lokaltog/vim-easymotion')

call dein#add('vim-scripts/bufexplorer.zip')
nnoremap <Esc>p :bp<CR>
nnoremap <Esc>n :bn<CR>
nnoremap <Esc>d :bd<CR>
noremap <CR> :BufExplorer<CR>

call dein#add('scrooloose/nerdcommenter')

call dein#add('tomasr/molokai')
let g:molokai_original=1

call dein#add('othree/xml.vim')
call dein#add('mhinz/vim-signify')
call dein#add('xolox/vim-misc')
call dein#add('ervandew/supertab')

call dein#add('bling/vim-airline')
let g:airline_left_sep=''
let g:airline_right_sep=''
let g:airline#extensions#tabline#enabled=1

call dein#add('nathanaelkane/vim-indent-guides')
let g:indent_guides_guide_size=1

call dein#add('bronson/vim-trailing-whitespace')

call dein#add('terryma/vim-multiple-cursors')

call dein#add('octol/vim-cpp-enhanced-highlight')

call dein#add('junegunn/vim-easy-align')

call dein#end()

" Required:
filetype plugin indent on

if dein#check_install()
    call dein#install()
endif

let g:promptline_preset = {
            \'a'    : [ '\h' ],
            \'b'    : [ '\u' ],
            \'c'    : [ promptline#slices#cwd() ],
            \'warn' : [ promptline#slices#last_exit_code() ],
            \'y'    : [ promptline#slices#vcs_branch() ]}
colorscheme molokai
